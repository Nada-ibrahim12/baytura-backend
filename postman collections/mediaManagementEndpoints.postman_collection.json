{
  "info": {
    "name": "MediaManagementEndpoints",
    "description": "Collection of Media-related API endpoints for BAYTURA project",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Upload Media",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "multipart/form-data"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": ""
            },
            {
              "key": "altName",
              "value": "Living Room",
              "type": "text"
            },
            {
              "key": "propertyId",
              "value": "1",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "http://localhost:8080/api/properties/1/media-upload",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "properties", "1", "media-upload"]
        }
      }
    },
    {
      "name": "Get All Media of Property",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8080/api/properties/1/media",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "properties", "1", "media"]
        }
      }
    },
    {
      "name": "Get Single Media",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8080/api/media/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "media", "1"]
        }
      }
    },
    {
      "name": "Delete Media",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "http://localhost:8080/api/properties/1/media/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "properties", "1", "media", "1"]
        }
      }
    }
  ]
}
